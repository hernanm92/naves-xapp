<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.xapp.naves.xapp.VideoActivity">

    <TextView android:text="@string/videos" android:layout_width="wrap_content"
        android:textSize="60px"
        android:textStyle="bold"
        android:gravity="center|top"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="watchBMXVideo"
        android:layout_above="@+id/button3"
        android:text="@string/bmx_video" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="watchLongboardVideo"
        android:layout_above="@+id/button2"
        android:text="@string/longboard_video" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="goToApiVideo"
        android:layout_above="@+id/button1"
        android:text="@string/api_video" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="openMain"
        android:text="@string/back_button" />

</RelativeLayout>
